<% if @post.liked_by?(current_user) %>
  <%= link_to(post_like_path(@post), method: :delete) do %>
    <span class="glyphicon glyphicon-heart" aria-hidden="true" style="font-size: 14px"></span>
  <% end %>
<% else %>
  <%= link_to(post_likes_path(@post), method: :post) do %>
    <span class="glyphicon glyphicon-heart-empty" aria-hidden="true" style="font-size: 14px"></span>
  <% end %>
<% end %>
<%= @likes_count %>